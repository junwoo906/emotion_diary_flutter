{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter (Chrome)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "deviceId": "chrome",
            "args": [
                "--web-renderer",
                "html"
            ]
        },
        {
            "name": "Flutter (Web Server)",
            "type": "dart", 
            "request": "launch",
            "program": "lib/main.dart",
            "deviceId": "web-server",
            "args": [
                "--web-port",
                "3000"
            ]
        }
    ]
}